generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id                String   @id @default(cuid())
  nombre            String
  categoria         String
  precio            Decimal  @db.Decimal(10, 2)
  disponible        Boolean  @default(true)
  descripcion       String?
  tiempoPreparacion Int?     @default(0) // Tiempo en minutos
  stock             Int      @default(0) // Cantidad en stock
  stockMinimo       Int?     @default(5) // Alerta de stock bajo
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  items             Item[]
}

model Orden {
  id                  String           @id @default(cuid())
  numeroMesa          Int
  mesero              String
  estado              String           @default("pendiente") // "pendiente_aprobacion_stock", "pendiente", "en_preparacion", "lista", "entregada", "cancelada"
  observaciones       String?
  total               Decimal          @db.Decimal(10, 2) @default(0)
  tiempoEstimado      Int?             @default(0) // Tiempo estimado en minutos
  modificada          Boolean          @default(false) // Indica si la orden fue modificada
  sinStock            Boolean          @default(false) // Indica si fue aprobada sin stock suficiente
  aprobadaPorId       String?          // Admin que aprobó la orden sin stock
  aprobadaPor         Usuario?         @relation("OrdenesAprobadas", fields: [aprobadaPorId], references: [id])
  razonAprobacion     String?          // Razón por la que se aprobó sin stock
  itemsSinStock       Json?            // Lista de items que no tenían stock: [{productoId, productoNombre, cantidadSolicitada, stockDisponible}]
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  items               Item[]
  historial           HistorialOrden[]
  impresa             Boolean          @default(false)
}

model Item {
  id            String   @id @default(cuid())
  ordenId       String
  orden         Orden    @relation(fields: [ordenId], references: [id], onDelete: Cascade)
  productoId    String
  producto      Producto @relation(fields: [productoId], references: [id])
  cantidad      Int
  precioUnitario Decimal @db.Decimal(10, 2)
  subtotal      Decimal  @db.Decimal(10, 2)
  observaciones String?
  createdAt     DateTime @default(now())
}

model Mesa {
  id          String  @id @default(cuid())
  numero      Int     @unique
  capacidad   Int
  disponible  Boolean @default(true)
}

model Usuario {
  id                String   @id @default(cuid())
  nombre            String
  rol               String
  password          String?
  activo            Boolean  @default(true)
  createdAt         DateTime @default(now())
  ordenesAprobadas  Orden[]  @relation("OrdenesAprobadas") // Órdenes sin stock aprobadas por este admin
}

model HistorialOrden {
  id              String   @id @default(cuid())
  ordenId         String
  orden           Orden    @relation(fields: [ordenId], references: [id], onDelete: Cascade)

  tipoAccion      String   // "orden_creada", "item_agregado", "item_eliminado", "item_modificado", "orden_completada"
  descripcion     String   // Descripción legible del cambio

  // Datos del cambio (JSON)
  itemAfectado    Json?    // { id, nombre, cantidad, precio }
  datosAntes      Json?    // Estado antes del cambio
  datosDespues    Json?    // Estado después del cambio

  // Auditoría
  usuarioNombre   String   // Quien hizo el cambio
  usuarioRol      String   // "mesero" | "cocina" | "admin"
  razon           String?  // Motivo del cambio (obligatorio para modificaciones)

  // Impacto financiero
  diferenciaTotal Decimal? @db.Decimal(10, 2)

  createdAt       DateTime @default(now())

  @@index([ordenId])
  @@index([createdAt])
}
